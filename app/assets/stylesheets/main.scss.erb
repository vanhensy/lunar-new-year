body {
	background: #fdfcfc;
}

#main_container {
	max-width: 720px!important;
}


#preview-button {
	margin-top: 120px!important;
}

#action-buttons {
	margin-top: 40px!important;	
}

#download-button {
	margin-top: 40px;
}

#card-container,
#canvas-container {
	width: 720px; 
	height: 400px;
	// background: url('<%= asset_path 'card-1.svg' %>');
