body {
	background: #fdfcfc;
	background-image: url("<%= asset_path "background.svg" %>"); 
	background-size: 400px 400px;
}

#main_container {
	max-width: 720px!important;
}


#preview-button {
	margin-top: 120px!important;
}

#action-buttons {
	margin-top: 40px!important;	
}

#download-button {
	margin-top: 40px;
}

#card-container,
#canvas-container {
	width: 720px; 
	height: 400px;
	background-size: cover;
}

#card-selection {
	img {
		height: 60px;
	}
	margin-bottom: 1em;
	.card {
		border: 2px solid #FFF;
		cursor: pointer;
	}
	.active {
		border: 2px solid yellow;
	}
}

#content-form {
	margin-top: -280px;
	text-align: left!important;
	max-width: 400px;
	margin-left:160px;
	input,
	textarea {
		background: transparent!important;
		border-style: dashed;
		border-color: #FFF;
		resize: none;
		color: #FFF;
	}
	label {
		font-family: 'Proxima_regular';
		color: #FFF!important;
		margin-bottom: 0.5em;
	}
}

.tm-button {
	font-family: 'Proxima_bold'!important;
	text-transform: uppercase!important;
	min-width: 200px!important;
}