body {
	background: #fdfcfc;
	// background-image: url("<%= asset_path "background.svg" %>");
	background-size: 400px 400px;
}

#main_container {
	max-width: 720px!important;
}


#preview-button {
	margin-top: 120px!important;
}

#action-buttons {
	margin-top: 40px!important;
}

#download-button {
	margin-top: 40px;
}

#card-container,
#canvas-container {
	width: 720px;
	height: 400px;
	background-size: cover;
	background-color: #fff;
	position: relative;
	#card-canvas {
		border-radius: 10px;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
	}
}

#card-selection {
	img {
		height: 60px;
	}
	margin-bottom: 2em;
	.card {
		border: 2px solid #FFF;
		cursor: pointer;
	}
	.active {
		border: 2px solid yellow;
	}
}

#content-form-left {
	text-align: left!important;
	max-width: 400px;
	position: relative;
	z-index: 2;
	top: 50%;
	left: 50%;
	transform: translateX(-50%) translateY(-50%);
}

#content-form-right {
		position: absolute;
		margin-top: -350px;
		text-align: left!important;
		width: 275px;
		margin-left:360px;
}

#content-form-left,
#content-form-right {
	input,
	textarea {
		background: transparent!important;
		border-style: dashed;
		border-color: #2c3e50;
		resize: none;
		color: #2c3e50;
	}
	input {
		border: 1px solid #95a5a6;
		border-width: 0 0 1px 0;
		border-radius: 0;
	}
	label {
		font-family: 'Proxima_regular';
		color: #2c3e50!important;
		margin-bottom: 0.5em;
	}
}

#content-form-right {
	label {
		color: #000!important;
	}
	input,
	textarea {
		border-color: #000;
		resize: none;
		color: #000;
	}
}

.tm-button {
	font-family: 'Proxima_bold'!important;
	text-transform: uppercase!important;
	min-width: 200px!important;
}
