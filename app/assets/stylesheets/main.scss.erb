	}
}

#content-form {
	margin-top: -280px;
	text-align: left!important;
	max-width: 400px;
	margin-left:160px;
	input,
	textarea {
		background: transparent!important;
		border-style: dashed;
		border-color: #FFF;
		resize: none;
		color: #FFF;
	}
	label {
		font-family: 'Proxima_regular';
		color: #FFF!important;
		margin-bottom: 0.5em;
	}
}

.tm-button {
	font-family: 'Proxima_bold'!important;
	text-transform: uppercase!important;
	min-width: 200px!important;
}