body {
	background: #fdfcfc;
	// background-image: url("<%= asset_path "background.svg" %>");
	background-size: 400px 400px;
}

#main_container {
	max-width: 750px!important;
	.wrapper {
		background: #FFFFFF;
		border-radius: 1em;
	}
}

#card-container,
#canvas-container {
	width: 720px;
	height: 400px;
	background-size: cover;
	background-color: #fff;
	position: relative;
	#card-canvas {
		border-radius: 10px;
		border: 1px solid #ecf0f1;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
	}
}

#card-container {
	img {
		border-radius: 10px;
		border: 1px solid #ecf0f1;
	}
}

#card-selection {
	img {
		height: 60px;
	}
	margin-bottom: 2em;
	.card {
		border: 2px solid #FFF;
		cursor: pointer;
	}
	.active {
		border: 2px solid #d35400;
	}
}

#content-form-left {
	text-align: left!important;
	max-width: 400px;
	position: relative;
	z-index: 2;
	top: 50%;
	left: 50%;
	transform: translateX(-50%) translateY(-50%);
}

#content-form-left {
	textarea {
		resize: none;
		color: #2c3e50;
	}
	input {
		border-style: solid;
		border-width: 0 0 1px 0;
		border-radius: 0;
		border-color: #bdc3c7!important;
		padding-left: 0;
	}
	label {
		font-family: 'Proxima_regular';
		color: #2c3e50!important;
		margin-bottom: 0.5em;
	}
}

.tm-button {
	font-family: 'Proxima_bold'!important;
	text-transform: uppercase!important;
	min-width: 200px!important;
}
