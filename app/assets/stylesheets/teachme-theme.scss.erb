@import 'variables';

/* --------------------------------

Primary style

-------------------------------- */

body {
  a {
    color: $primaryColorBlue;
    font-family: $fontRegular;

    &:hover {
      color: #02667F;
    }
  }
  input, p {
    font-family: $fontRegular;
  }
  font-size: 14px;
  .ui.header,
  h1, h2, h3, h4, h5, h6 {
    font-family: $fontProxima;
    font-weight: 600;
  }
}

//----- Margin and Padding ------//

@each $type, $value in $spaceTypes {
  @each $prop, $size in $spaceSizes {
    .#{$type}-#{$prop} {
      &--all {
        #{$value}: $size $ip;
      }
      &--top, &--ends {
        #{$value}-top: $size $ip;
      }
      &--bottom, &--ends {
        #{$value}-bottom: $size $ip;
      }
      &--left, &--sides {
        #{$value}-left: $size $ip;
      }
      &--right, &--sides {
        #{$value}-right: $size $ip;
      }
    }
  }
}


