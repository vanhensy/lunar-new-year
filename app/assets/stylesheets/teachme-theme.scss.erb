@import 'variables';

/* -------------------------------- 

Primary style

-------------------------------- */

body {
  a {
    color: $primaryColorBlue;
    font-family: $fontRegular;

    &:hover {
      color: #02667F;
    }
  }
  input, p {
    font-family: $fontRegular;
  }

}

//----- Margin and Padding ------//

@each $type, $value in $spaceTypes {
  @each $prop, $size in $spaceSizes {
    .#{$type}-#{$prop} {
      &--all {
        #{$value}: $size $ip;
      }
      &--top, &--ends {
        #{$value}-top: $size $ip; 
      }
      &--bottom, &--ends {
        #{$value}-bottom: $size $ip;
      }
      &--left, &--sides {
        #{$value}-left: $size $ip;
      }
      &--right, &--sides {
        #{$value}-right: $size $ip;
      }
    }
  }
}


.hide {
  display: none$ip;
}
.error-image {
  max-width: 300px;
}
.error-text {
  color: #34495e$ip;
  font-weight: 400$ip;
  margin-top: 0$ip;
}
