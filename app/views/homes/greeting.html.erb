<div class="ui container p-none--sides" id="main_container">
	<div class="ui center aligned middle aligned stackable grid full-height">

		<div class="sixteen wide column">
				<div id="card-selection">
					<div class="ui six cards">
						<% @desktop_templates.each_with_index do |template, index| %>
							<div class="fluid card tm-deep-shadow <%= "active" if index == 0 %>" data-template="<%= index + 1 %>">
								<%= image_tag "#{template}.png" %>
							</div>
						<% end %>
					</div>
				</div>
				<div id="canvas-container" class="tm-deep-shadow">
					<%= render 'homes/form' %>
				</div>
				<button class="ui red tm-deep-shadow button tm-button"
								id="preview-button">
					Xem trước
				</button>
				<div class="ui tm-deep-shadow buttons" id="action-buttons">
					<button class="ui orange button tm-button"
									id="back-button"
									style="display: none">
						Chỉnh sửa
					</button>
					<button class="ui red button tm-button"
									id="send-button"
									style="display: none">
						Tạo Thiệp
					</button>
				</div>
		</div>
	</div>
</div>
